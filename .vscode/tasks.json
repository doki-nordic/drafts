{
        "tasks": [
                {
                        "type": "shell",
                        "label": "gcc build active file",
                        "command": "/usr/bin/gcc",
                        "args": [
                                "-g",
                                "${file}",
				"-lX11",
				"-I.",
				"-o",
                                "${fileDirname}/${fileBasenameNoExtension}"
                        ],
                        "options": {
                                "cwd": "/usr/bin"
                        }
                }
        ],
        "version": "2.0.0"
}